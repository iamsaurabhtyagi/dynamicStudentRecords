<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
        <hibernate-mapping>
            <class name="com.hibernate.dao.student.StudentDetail" table="student">
                <id name="rollNo" column="Roll_No">
                    <generator class="increment" />
                </id>
                
                <property name="studentName" column="name" />
                <property name="fatherName" column="Father_Name"/>
		        <property name="motherName" column="Mother_Name" />
		        <property name="dob" column="DoB" />
		        <property name="gender" column="Gender" />
		        <property name="maritalStatus" column="Marital_Status" />
		        
		        <property name="course" column="Course" />
		        <property name="branch" column="Branch" />
		        <property name="year" column="Year" />
		        <property name="semester" column="Semester" />
		        
		        <property name="emailID" column="Email_id" />
		        <property name="mobile" column="Mobile" />
		        
		        <property name="localAddress" column="Local_Address" />
		        <property name="localCity" column="L_City" />
		        <property name="localState" column="L_State" />
		        <property name="localPinCode" column="L_Pin_Code" />
		        
		        <property name="permanentAddress" column="Permanent_Address" />
		        <property name="permanentCity" column="P_City" />
		        <property name="permanentState" column="P_State" />
		        <property name="permanentPinCode" column="P_Pin_Code" />
		        
            </class>
        </hibernate-mapping>